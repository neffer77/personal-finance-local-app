{
  "name": "spendlens",
  "version": "0.1.0",
  "description": "Local-first Chase credit card statement analyzer",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "npm run build:main && concurrently \"tsc -p tsconfig.node.json --watch --preserveWatchOutput\" \"tsc-alias -p tsconfig.node.json --watch\" \"vite\" \"electron .\"",
    "dev:renderer": "vite",
    "dev:electron": "electron .",
    "build": "npm run build:main && vite build && electron-builder",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.node.json && tsc-alias -p tsconfig.node.json",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [],
  "author": "Connor",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.11.0",
    "@types/papaparse": "^5.5.2",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "electron": "^29.0.1",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jsdom": "^24.0.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.3.3",
    "vite": "^5.1.0",
    "vite-plugin-electron": "^0.28.4",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vitest": "^1.3.1"
  },
  "dependencies": {
    "better-sqlite3": "^9.4.3",
    "papaparse": "^5.4.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^2.12.1",
    "zustand": "^4.5.1"
  },
  "build": {
    "appId": "com.spendlens.app",
    "productName": "SpendLens",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "resources/**/*"
    ],
    "mac": {
      "icon": "resources/icon.icns",
      "category": "public.app-category.finance"
    },
    "win": {
      "icon": "resources/icon.ico"
    },
    "linux": {
      "icon": "resources/icon.png"
    }
  }
}
